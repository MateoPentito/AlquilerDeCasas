        <div class="row g-0 border rounded overflow-hidden flex-md-row mb-4 shadow-sm h-md-250 position-relative">

                <div>
                    <h2 class="fst-italic"> Producto</h2>
                    <label>Ingresar nombre del producto</label>
                    <input type="text" asp-for="Nombre" />
                </div>
                <div>
                    <h2 class="fst-italic">Precio</h2>
                    <label>Ingresar precio del producto</label>
                    <input type="number" asp-for="Precio" />
                </div>
                <div>
                    <h2 class="fst-italic">Cantidad</h2>
                    <label>Ingresar cantidad del producto</label>
                    <input type="numbre" asp-for="Cantidad" />
                </div>

            <div class="d-flex justify-content-center mx-4 mb-3 mb-lg-4">
                    <button type="submit" asp-controller="Productos" asp-action="Index">Confirmar compra</button>
                </div>
            </div>   
        
      
